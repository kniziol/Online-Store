{% trans_default_domain 'AppBundle' %}

<header>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">{{ 'app.action.toggle_navigation' | trans }}</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('app.homepage') }}">{{ 'app.application.title' | trans }}</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="{{ path('app.homepage') }}">{{ 'app.application.pages.homepage' | trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('app.product.index') }}">{{ 'app.application.pages.products.list' | trans }}</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% set is_anonymous = app.user is null %}

                    {% set route = 'app.logout' %}
                    {% set label = 'app.action.logout' %}

                    {% if is_anonymous %}
                        {% set route = 'app.login' %}
                        {% set label = 'app.action.login' %}
                    {% else %}
                        <li>
                            <p class="navbar-text">{{ '%s %s' | format('app.label.login.signed_as' | trans, app.user) }}</p>
                        </li>
                    {% endif %}

                    <li>
                        <a href="{{ path(route) }}">{{ label | trans }}</a>
                    </li>
                </ul>
            </div><!--/.navbar-collapse -->
        </div>
    </nav>
</header>
